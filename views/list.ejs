<div style="position:fixed;top:75%;z-index:99;opacity:0.7;">
	<a id="menubtn" href="#sidr" class="ui black huge launch attached button menubtn">
		<i class="icon list layout"></i>
	</a>
<% if (it.user) { %>
	<div id="editbtn" class="ui green huge launch attached button editbtn">
		<i class="edit icon"></i>
	</div>
<% } %>
</div>

<div id="sidr" class="sidr left">
