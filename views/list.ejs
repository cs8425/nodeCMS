		<li><a class="item black launch button" href="/login" >
			<i class="layout sign in icon"></i>登入
		</a></li>
<% } else { %>
		<li><a class="item black launch button" href="/logout" >
			<i class="layout sign out icon"></i>登出
		</a></li>
<% } %>
<% for(var id in it.navbar){ %>
