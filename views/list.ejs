<% 			if (it.url == it.navbar[id].url) { %>
<% 				if(it.navbar[id].sub && it.navbar[id].sub.length > 0){ %>
	<li class="active">
		<a href="/<%= it.navbar[id].url %>"><b><%= it.navbar[id].name %></b><i class="dropdown icon"></i></a>
		<ul>
<% 					for(var sub in it.navbar[id].sub){ %>
<% 						if(it.navbar[id].sub[sub].hide == "false") { %>
